<div class="form-login">
  <h2><%= t ".log_in" %></h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.label t "sessions.email" %>
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
    <%= f.label t "sessions.password" %>
    <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <%= f.submit t("sessions.new.base_title"), class: "btn btn-primary btn-login" %>
    <%= link_to t("register"), new_user_registration_path, class: "btn btn-primary btn-login" %>
  <% end %>
  <div class="div-btns-social">
    <%= link_to omniauth_authorize_path(resource_name, :facebook) do %>
      <button class="loginBtn loginBtn--facebook">
        <%= t ".login_with_facebook" %>
      </button>
    <% end %>

    <%= link_to omniauth_authorize_path(resource_name, :google_oauth2) do %>
      <button class="loginBtn loginBtn--google">
        <%= t ".login_with_google" %>
      </button>
    <% end %>
  </div>
</div>
