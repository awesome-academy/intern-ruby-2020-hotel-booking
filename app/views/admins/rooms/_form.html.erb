<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>
<%= form_for [:admins, @room] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label t("admins.rooms.name") %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label t("admins.rooms.slug") %>
  <%= f.text_field :slug, class: "form-control" %>
  <%= f.label t("admins.rooms.cate") %>
  <%= f.select("category_id", Category.pluck(:name, :id), {}, class: "form-control") %>
  <%= f.label t("admins.rooms.price") %>
  <%= f.number_field :price, min: Settings.rooms.min_num, class: "form-control" %>
  <%= f.label t("admins.rooms.ward") %>
  <%= f.select("ward_id", Location.pluck(:name, :id), {}, class: "form-control") %>
  <%= f.label t("admins.rooms.max_person") %>
  <%= f.number_field :max_person, min: Settings.rooms.min_num, class: "form-control" %>
  <%= f.label t("admins.rooms.des") %>
  <%= f.text_field :description, class: "form-control" %>
  <%= f.label t("admins.rooms.map") %>
  <%= f.text_field :map, class: "form-control" %>
  <%= f.label t("admins.rooms.image") %>
  <%= f.text_field :image, class: "form-control" %>
  <%= f.submit t("admins.rooms.submit"), class: "btn btn-primary" %>
<% end %>
