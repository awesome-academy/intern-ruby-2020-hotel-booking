<% provide :title, t("admins.orders.base_title")%>
<div class="text-center">
  <%= render "admins/orders/form_search" %>
</div>
<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-12 title-head">
          <h1 class="m-0"><%= t "admins.orders.base_title" %></h1>
          <span class="align-self-center result-admin-order">
            <%= t ".result" %> : <%= @orders.total_count %>
          </span>
          <%= link_to t("admins.orders.add"), new_admins_room_path,
            class: "btn btn-warning float-right" %>
        </div>
      </div>
    </div>
  </div>
  <section class="content">
    <div class="container-fluid">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">
              <div class="box-sort">
                <%= sort_link @q,
                              :id,
                              t("admins.orders.id"),
                              remote: true %>
              </div>
            </th>
            <th scope="col">
              <div class="box-sort">
                <%= sort_link @q,
                              :user_name,
                              t("admins.orders.user_id"),
                              remote: true %>
              </div>
            </th>
            <th scope="col">
              <div class="box-sort">
                <%= sort_link @q,
                              :room_id,
                              t("admins.orders.room_id"),
                              remote: true %>
              </div>
            </th>
            <th scope="col">
              <div class="box-sort">
                <%= sort_link @q,
                              :created_at,
                              t(".created_at"),
                              remote: true %>
              </div>
            </th>
            <th scope="col">
              <div class="box-sort">
                <%= sort_link @q,
                              :date_start,
                              t(".date_start"),
                              remote: true %>
              </div>
            </th>
            <th scope="col">
              <div class="box-sort">
                <%= sort_link @q,
                              :date_end,
                              t(".date_end"),
                              remote: true %>
              </div>
            </th>
            <th scope="col">
              <div class="box-sort">
                <%= sort_link @q,
                              :price,
                              t("admins.orders.price"),
                              remote: true %>
              </div>
            </th>
            <th scope="col">
              <div class="box-sort">
                <%= sort_link @q,
                              :status,
                              t("admins.orders.status"),
                              remote: true %>
              </div>
            </th>
            <th scope="col"><%= t "admins.orders.action" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @orders %>
        </tbody>
      </table>
    </div>
  </section>
  <%= paginate @orders, theme: "twitter-bootstrap-3" %>
</div>
